<LayoutContainer @title="Surely" as |layout|>
  <layout.toolbar @showSideNavToggle={{this.session.isAuthenticated}}>
    <AppToolbarMenu />
  </layout.toolbar>
  <layout.body as |body|>
    <body.sidenav>
      <AppSideNavContent
        @availableTodoCount={{this.availableTodoCount}}
        @tomorrowTodoCount={{this.tomorrowTodoCount}}
      />
    </body.sidenav>
    <body.content>
      <div class="container">
        <div class="row">
          <div class="d-none d-xl-block col-xl-1"></div>
          <div class="col-12 col-xl-10">
            {{#if this.routeRequiresAuthentication}}
              <SignInForm @onSignedIn={{this.handleSignIn}} />
            {{else}}
              {{outlet}}
            {{/if}}
          </div>
          <div class="d-none d-xl-block col-xl-1"></div>
        </div>
      </div>
    </body.content>
  </layout.body>
</LayoutContainer>
