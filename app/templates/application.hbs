<AppLayout @title="Surely" as |layout|>
  <layout.sidenav>
    <SideNav />
  </layout.sidenav>
  <layout.body>
    <layout.toolbar>
      <AppToolbar />
    </layout.toolbar>
    <layout.content>
      {{#if this.session.isAuthenticated}}
        {{outlet}}
      {{else}}
        <LoginForm />
      {{/if}}
    </layout.content>
  </layout.body>
</AppLayout>
