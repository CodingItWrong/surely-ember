<LayoutContainer @title="Surely" as |layout|>
  <layout.sidenav>
    <AppSideNavContent />
  </layout.sidenav>
  <layout.body as |body|>
    <body.toolbar @showSideNavToggle={{this.session.isAuthenticated}}>
      <AppToolbarMenu />
    </body.toolbar>
    <body.content>
      {{#if this.session.isAuthenticated}}
        {{outlet}}
      {{else}}
        <LoginForm />
      {{/if}}
    </body.content>
  </layout.body>
</LayoutContainer>
