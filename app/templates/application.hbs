<LayoutContainer @title="Surely" as |layout|>
  <layout.sidenav>
    <AppSideNavContent
      @availableTodoCount={{this.availableTodoCount}}
      @tomorrowTodoCount={{this.tomorrowTodoCount}}
    />
  </layout.sidenav>
  <layout.body as |body|>
    <body.toolbar @showSideNavToggle={{this.session.isAuthenticated}}>
      <AppToolbarMenu />
    </body.toolbar>
    <body.content>
      {{#if this.routeRequiresAuthentication}}
        <SignInForm @onSignedIn={{this.handleSignIn}} />
      {{else}}
        {{outlet}}
      {{/if}}
    </body.content>
  </layout.body>
</LayoutContainer>
