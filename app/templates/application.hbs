<Layout @title="Surely" as |layout|>
  <layout.sidenav>
    <AppSideNavContent />
  </layout.sidenav>
  <layout.body>
    <layout.toolbar @showSideNavToggle={{this.session.isAuthenticated}}>
      <AppToolbarMenu />
    </layout.toolbar>
    <layout.content>
      {{#if this.session.isAuthenticated}}
        {{outlet}}
      {{else}}
        <LoginForm />
      {{/if}}
    </layout.content>
  </layout.body>
</Layout>
