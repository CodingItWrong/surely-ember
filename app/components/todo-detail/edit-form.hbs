<PaperCard as |card|>
  <card.title as |title|>
    <title.text as |text|>
      <text.headline>
        Edit Todo
      </text.headline>
    </title.text>
  </card.title>
  <PaperForm @onSubmit={{this.handleSave}} as |form|>
    <card.content>
      <form.input
        @label="Todo"
        @value={{this.editedName}}
        @onChange={{action (mut this.editedName)}}
        @block={{true}}
        autocapitalize="true"
        data-test-todo-name-field
      />
      <form.input
        @type="date"
        @label="Defer Until Date"
        @value={{this.deferredUntil}}
        @onChange={{action (mut this.deferredUntil)}}
        @block={{true}}
        data-test-deferred-until-field
      />
      <form.input
        @label="Notes"
        @value={{this.editedNotes}}
        @onChange={{action (mut this.editedNotes)}}
        @textarea={{true}}
        @block={{true}}
        autocapitalize="false"
      />
    </card.content>
    <card.actions class="app-button-container">
      <PaperButton @onClick={{@onCancel}}>
        Cancel
      </PaperButton>
      <form.submit-button
        @raised={{true}}
        @primary={{true}}
        data-test-save-button
      >
        {{paper-icon "save"}}
        Save
      </form.submit-button>
    </card.actions>
  </PaperForm>
</PaperCard>
