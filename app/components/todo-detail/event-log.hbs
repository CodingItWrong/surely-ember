{{#if @displayModel.isDeleted}}
  <EventLogEntry
    @isPrimary={{true}}
    data-test-deleted-at
  >
    Deleted {{relative-datetime @displayModel.deletedAt}}
  </EventLogEntry>
{{/if}}

{{#if @displayModel.isCompleted}}
  <EventLogEntry
    @isPrimary={{not @displayModel.isDeleted}}
    data-test-completed-at
  >
    Completed {{relative-datetime @displayModel.completedAt}}
  </EventLogEntry>
{{/if}}

{{#if @displayModel.deferredUntil}}
  <EventLogEntry
    @isPrimary={{not (or @displayModel.isDeleted @displayModel.isCompleted)}}
    data-test-deferred-until
  >
    Deferred until {{relative-date @displayModel.deferredUntil}}
  </EventLogEntry>
{{/if}}

<EventLogEntry
  @isPrimary={{not (or @displayModel.isDeleted @displayModel.isCompleted @displayModel.deferredUntil)}}
>
  Created {{relative-datetime @displayModel.createdAt}}
</EventLogEntry>
