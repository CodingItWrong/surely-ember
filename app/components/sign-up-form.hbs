<PaperCard as |card|>
  <card.title as |title|>
    <title.text as |text|>
      <text.headline>
        Sign Up
      </text.headline>
    </title.text>
  </card.title>
  <PaperForm
    @onSubmit={{this.signUp}}
    data-test-sign-up-form
    as |form|
  >
    <card.content>
      <p
        class="error-text"
        data-test-error-message
      >
        {{this.errorMessage}}
      </p>
      <form.input
        @type="email"
        @block={{true}}
        @label="Email"
        @value={{this.email}}
        @onChange={{action (mut this.email)}}
        @required={{true}}
        data-test-email-field
      />
      <form.input
        @type="password"
        @block={{true}}
        @label="Password"
        @value={{this.password}}
        @onChange={{action (mut this.password)}}
        @required={{true}}
        data-test-password-field
      />
      <form.input
        @type="password"
        @block={{true}}
        @label="Confirm Password"
        @value={{this.passwordConfirmation}}
        @onChange={{action (mut this.passwordConfirmation)}}
        @required={{true}}
        data-test-password-confirmation-field
      />
    </card.content>
    <card.actions>
      <PaperButton @onClick={{@onCancel}}>
        Cancel
      </PaperButton>
      <form.submit-button
        @raised="true"
        @primary={{true}}
        data-test-sign-up-confirm-button
      >
        Sign Up
      </form.submit-button>
    </card.actions>
  </PaperForm>
</PaperCard>
