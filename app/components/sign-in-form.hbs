<PaperCard as |card|>
  <PaperForm @onSubmit={{this.signIn}} as |form|>
    <card.content>
      <p>{{this.errorMessage}}</p>
      <form.input
        @type="email"
        @block={{true}}
        @label="Email"
        @value={{this.email}}
        @onChange={{action (mut this.email)}}
        @required={{true}}
      />
      <form.input
        @type="password"
        @block={{true}}
        @label="Password"
        @value={{this.password}}
        @onChange={{action (mut this.password)}}
        @required={{true}}
      />
    </card.content>
    <card.actions>
      <PaperButton
        @onClick={{this.goToSignUp}}
        data-test-sign-up-button
      >
        Sign Up
      </PaperButton>
      <form.submit-button
        @raised="true"
        @primary={{true}}
      >
        Sign In
      </form.submit-button>
    </card.actions>
  </PaperForm>
</PaperCard>

<div class="layout-margin deemphasized-text">
  <small><a href="https://thenounproject.com/search/?q=checkmark&i=1758124">Checkmark icon</a> by Scott Dunlap from the Noun Project</small>
</div>
