<PaperCard as |card|>
  <PaperForm
    @onSubmit={{this.signIn}}
    data-test-sign-in-form
  >
    <card.content>
      {{#if this.errorMessage}}
        <div
          class="alert alert-danger"
          role="alert"
          data-test-error-message
        >
          {{this.errorMessage}}
        </div>
      {{/if}}
      <div class="form-group" data-test-email-field>
        <label for="email-field">Email</label>
        <Input
          @value={{this.email}}
          type="email"
          id="email-field"
          class="form-control"
        />
      </div>
      <div class="form-group" data-test-password-field>
        <label for="password-field">Password</label>
        <Input
          @value={{this.password}}
          type="password"
          id="password-field"
          class="form-control"
        />
      </div>
    </card.content>
    <card.actions>
      <button
        {{on "click" this.goToSignUp}}
        type="button"
        class="btn btn-light"
        data-test-sign-up-button
      >
        Sign Up
      </button>
      &nbsp;
      <button
        type="submit"
        class="btn btn-primary"
      >
        Sign In
      </button>
    </card.actions>
  </PaperForm>
</PaperCard>

<div class="layout-margin deemphasized-text">
  <small><a href="https://thenounproject.com/search/?q=checkmark&i=1758124">Checkmark icon</a> by Scott Dunlap from the Noun Project</small>
</div>
