<form
  {{on "submit" this.createTodo}}
  class="layout-margin"
  data-test-new-todo-form
>
  <div class="form-group">
    <Input
      @value={{this.newTodoName}}
      placeholder={{@placeholder}}
      class="form-control"
      {{on "keydown" this.handleNameKeyDown}}
      data-test-new-todo-field
    />
  </div>

  {{#if this.errorMessage}}
    <div
      class="alert alert-danger"
      role="alert"
      data-test-error-message
    >
      {{this.errorMessage}}
    </div>
  {{/if}}
</form>
