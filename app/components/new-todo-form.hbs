<PaperForm
  @onSubmit={{this.createTodo}}
  class="layout-margin"
  data-test-new-todo-form
  as |form|
>
  <form.input
    @placeholder="Add Todo"
    @value={{this.newTodoName}}
    @onChange={{action (mut this.newTodoName)}}
    @block={{true}}
    autocapitalize="sentences"
    data-test-new-todo-field
  />
</PaperForm>
